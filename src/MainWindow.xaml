<Window x:Class="BaconPancakes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gv="clr-namespace:Microsoft.Msagl.GraphViewerGdi;assembly=Microsoft.Msagl.GraphViewerGDI"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:BaconPancakes"
        mc:Ignorable="d"
        Title="BaconPancakes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Width="{x:Static SystemParameters.PrimaryScreenWidth}"
        Height="{x:Static SystemParameters.PrimaryScreenHeight}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="66*"/>
            <ColumnDefinition Width="1363*"/>
            <ColumnDefinition Width="66*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="41*"/>
        </Grid.RowDefinitions>
        <Button x:Name="Browse" Content="Browse" HorizontalAlignment="Left" Height="26" Margin="170,146,0,0" VerticalAlignment="Top" Width="102" Click="Browse_Click" RenderTransformOrigin="0.5,0.5" Grid.Column="1"/>
        <Button x:Name="Submit" Content="Submit" HorizontalAlignment="Left" Height="42" Margin="2,188,0,0" VerticalAlignment="Top" Width="117" Click="Submit_Click" RenderTransformOrigin="0.5,0.5" Grid.Row="1" Grid.Column="1"/>
        <Label x:Name="Graph" Content="Graph File" HorizontalAlignment="Left" Height="41" Margin="64,148,0,0" VerticalAlignment="Top" Width="167" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2"/>
        <Label x:Name="Algorithm" Content="Algorithm" HorizontalAlignment="Left" Height="36" Margin="64,18,0,0" VerticalAlignment="Top" Width="167" RenderTransformOrigin="0.5,0.5" Grid.Row="1" Grid.ColumnSpan="2"/>
        <Label x:Name="Node_Start" Content="Choose Account" HorizontalAlignment="Left" Height="37" Margin="64,75,0,0" VerticalAlignment="Top" Width="167" RenderTransformOrigin="0.5,0.5" Grid.Row="1" Grid.ColumnSpan="2">
        </Label>
        <Label x:Name="Node_End" Content="Explore friends with" HorizontalAlignment="Left" Height="37" Margin="64,133,0,0" VerticalAlignment="Top" Width="167" RenderTransformOrigin="0.5,0.5" Grid.Row="1" Grid.ColumnSpan="2">
        </Label>
        <RadioButton x:Name="DFS" Content="DFS" GroupName="Algo" HorizontalAlignment="Left" Margin="170,21,0,0" VerticalAlignment="Top" Grid.Row="1" IsChecked="True" Grid.Column="1"/>
        <RadioButton x:Name="BFS" Content="BFS" GroupName="Algo" HorizontalAlignment="Left" Margin="271,21,0,0" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1"/>
        <Label x:Name="File_Name" x:FieldModifier="public" Content="File Name" HorizontalAlignment="Left" Height="41" Margin="293,148,0,0" VerticalAlignment="Top" Width="167" RenderTransformOrigin="0.5,0.5" FontWeight="Normal" FontStyle="Italic" Grid.Column="1"/>
        <ComboBox x:Name="Node_Src" HorizontalAlignment="Left" Height="26" Margin="170,73,0,0" Grid.Row="1" VerticalAlignment="Top" Width="164" Grid.Column="1"/>
        <ComboBox x:Name="Node_Dest" HorizontalAlignment="Left" Height="26" Margin="170,129,0,0" Grid.Row="1" VerticalAlignment="Top" Width="164" Grid.Column="1"/>
        <ScrollViewer x:Name="ScrollViewerA" Grid.Column="1" HorizontalAlignment="Left" Height="312" Margin="0,269,0,0" Grid.Row="1" VerticalAlignment="Top" Width="508" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="Result" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="14" Margin="5" LineStackingStrategy="BlockLineHeight" LineHeight="20">
            </TextBlock>
        </ScrollViewer>
        <WindowsFormsHost Name="WFH" Margin="565,44,67,75" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <gv:GViewer x:Name="gViewer"></gv:GViewer>
        </WindowsFormsHost>

    </Grid>
</Window>